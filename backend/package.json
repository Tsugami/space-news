{
  "name": "@space-news/backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest watch --passWithNoTests",
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js",
    "lint:fix": "eslint --fix .",
    "lint:check": "eslint --cache --cache-location ./node_modules/.cache/eslint \"{src,apps,libs,test}/**/*.ts\" .",
    "type:check": "tsc --noEmit",
    "validate": "concurrently -r \"npm run lint:check\" \"npm run type:check\" \"npm run test\""
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.24",
    "@types/node-cron": "^3.0.6",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.26.2"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "yarn@1.22.19",
  "dependencies": {
    "axios": "^1.2.1",
    "node-cron": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "winston": "^3.8.2"
  }
}
